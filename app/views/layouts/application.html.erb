<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
<div class="container" style="width: auto;">
  <div class="row" style="background-color: black; height: 7vh;">
    <div class="col-sm-3" style="text-align: left; color: white">
  <p>Bookers</p></div>
  <div class="col-sm-9" style="text-align: right;">
    <nav>
     <% if user_signed_in? %>
        <%= link_to "Home", user_path(current_user), class: "btn btn-black btn-sm glyphicon glyphicon-home", style: "color: gray; height: 1vh;" %>

        <%= link_to "Users", users_path, class: "btn btn-black btn-sm glyphicon glyphicon-user", style: "color: gray; height: 1vh;" %>
          
      <%= link_to "Books", books_path, class: "btn btn-black btn-sm glyphicon glyphicon-book", style: "color: gray; height: 1vh;" %>
          
      <%= link_to "logout", destroy_user_session_path, class: "btn btn-black btn-sm glyphicon glyphicon-log-out", method: :delete, style: "color: gray; height: 1vh;" %>
        
      <% else %>

      <%= link_to "Home", root_path, class: "btn btn-black btn-sm glyphicon glyphicon-home", style: "color: gray; height: 1vh;" %>

      <%= link_to "About", home_about_path, class: "btn btn-black btn-sm glyphicon glyphicon-link", style: "color: gray; height: 1vh;" %>

      <%= link_to "Sign up", new_user_registration_path, class: "btn btn-black btn-sm glyphicon glyphicon-edit", style: "color: gray; height: 1vh;" %>
      
      <%= link_to "login", new_user_session_path, class: "btn btn-black btn-sm glyphicon glyphicon-log-in", style: "color: gray; height: 1vh;" %>
      
    <% end %>
    </nav>
  </div>
</div>
<div class="container">
  <div class="row">
    <%= yield %>
  </div>
</div>
    
<div class="col-sm-12" style="text-align: right;">
CopyRight Infratop.inc</div>
  </body>
</html>
