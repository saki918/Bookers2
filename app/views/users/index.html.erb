
<% if @user.errors.any? %>
    <div id="error_explanation">
        <h2><%= @user.errors.count %>件のerrorが発生しました。</h2>
            <ul>
                <% @user.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                <% end %>
            </ul>
    </div>
<% end %>

	<div class="col-xs-3">

			<h2>User info</h2>
			<%= attachment_image_tag @user, :profile_image, size: "100x100", format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %>
		<table class="table">
		  <tbody>
		  	<tr>
				<th>name</th><td><%= @user.name %></td>
			</tr>
			<tr>
				<th>introduction</th><td><%= @user.introduction %></td>
			</tr>
		  </tbody>
		</table>

	    <a><%= link_to "", edit_user_path(@user), class: "btn btn-default btn-block pull-left glyphicon glyphicon-wrench" %></a>


		<%= form_for(@book) do |f| %>
			<h3>New book</h3>
		    <h4>Title</h4>
		      <%= f.text_field :title %>
		 
		    <h4>Body</h4>
		    <%= f.text_area :body %><br>

		    <button type="submit" class="btn btn-primary btn-block">Create Book</button>

		<% end %>
    </div>

<div class="col-xs-9">
	<h2>Users</h2>
	<table class="table">
	<thead>
		<tr>
			<th>image</th>
			<th>name</th>
		</tr>
	</thead>

	<tbody>
		<% @users.each do |user| %>
		<tr>
			<td><%= attachment_image_tag user, :profile_image, size: "100x100", format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %></td>

			<td><%= user.name %></td>
			<div class= button >
			  <td><%= link_to"Show",user_path(user.id) %></td>
			</div>
		</tr>
        <% end %>
	</tbody>
  </table>
</div>
