<h4 id="notice">
 <%=  notice %> 
</h4>

	<div class="col-xs-3">

			<h2>User info</h2>
			<%= attachment_image_tag @book.user, :profile_image, size: "100x100", format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %>
		<table class="table">
		  <tbody>
		  	<tr>
				<th>name</th><td><%= @book.user.name %></td>
			</tr>
			<tr>
				<th>introduction</th><td><%= @book.user.introduction %></td>
			</tr>
		  </tbody>
		</table>

	    <a><%= link_to "", edit_user_path(@book.user), class: "btn btn-default btn-block pull-left glyphicon glyphicon-wrench" %></a>


		<%= form_for(@book_new) do |f| %>
			<h3>New book</h3>
		    <h4>Title</h4>
		      <%= f.text_field :title %>
		 
		    <h4>Body</h4>
		    <%= f.text_area :body %><br>
		 	
		    <button type="submit" class="btn btn-primary btn-block" data-disable-with="create book">Create Book</button>
		    
<% end %>
    </div>

<div class="col-xs-9">
<header>
<h1>Book detail</h1>
</header>

<table class="table">
	<thead>
		<tr>
			<th>Title</th>
			<th>Body</th>
		</tr>
	</thead>

	<tbody>
		<tr>
			<td><%= link_to user_path(@book.user) do %>
				<%= attachment_image_tag @book.user, :profile_image, size: "100x100", format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %>
			    <%= @book.user.name %><% end %>
			    	
			    </td>
			<td><%= link_to @book.title, book_path(@book.id) %></td>
			<td><%= @book.body %></td>
			<% if @book.user == current_user%>
			<div class= button >
			  <td><%= link_to"Edit",edit_book_path(@book.id) %></td>
			  <td><%= link_to "Destroy",  book_path(@book.id), method: :delete, data: { confirm: '本当に消しますか？' } %></td>
		    </div>
		    <% end %>
		</tr>
	</tbody>
</table>
</div>
